<Window x:Class="POP_RS18_2012GUI.UI.TipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_RS18_2012GUI.UI"
        mc:Ignorable="d"
        Title="Tip Namestaja" Height="270.122" Width="504.557">
    <Grid>
        <Label Content="Naziv tipa:" HorizontalAlignment="Left" Margin="20,46,0,0" VerticalAlignment="Top" FontSize="25"/>
        <TextBox x:Name="tbNazivTipa" HorizontalAlignment="Left" Height="36" Margin="160,53,0,0" TextWrapping="Wrap" Text="{Binding Path=Naziv}" VerticalAlignment="Top" Width="303" FontSize="20" />
        <Button Content="Sacuvaj" HorizontalAlignment="Left" Margin="322,145,0,0" VerticalAlignment="Top" Width="165" Height="84" FontSize="20" FontWeight="Bold" Click="SacuvajBtn"/>
        <Button Content="Izadji" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Width="165" Height="84" FontSize="20" FontWeight="Bold" Click="IzadjiBtn"/>

    </Grid>
</Window>
